<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sang.com.minitoolsimple.CircularImageActivity">

    <sang.com.minitools.CircularImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/a" />

    <sang.com.minitools.CirculaViewFramlayout
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/a">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/a" />

    </sang.com.minitools.CirculaViewFramlayout>


    <CheckBox
        android:id="@+id/cb_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否显示边框" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆角大小：" />

        <TextView
            android:id="@+id/tv_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="300" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左上圆角大小：" />

        <TextView
            android:id="@+id/tv_lefttopradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <SeekBar
        android:id="@+id/sb_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2000" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="边缘宽度：" />

        <TextView
            android:id="@+id/tv_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#abcdef"
        android:src="@mipmap/a" />

</LinearLayout>
